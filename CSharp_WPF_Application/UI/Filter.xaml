<UserControl x:Class="UI.Filter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI"
             mc:Ignorable="d" 
             FontSize="12"
             FontFamily="Microsoft JhengHei"
             MinWidth="90" MaxWidth="90" MinHeight="90" MaxHeight="90">

    <Grid Background="White">
        <StackPanel x:Name="StackPanel_NineSquare" Orientation="Vertical" MouseRightButtonDown="StackPanel_NineSquare_MouseRightButtonDown"  ToolTip="Right-click to Confirm">
            <StackPanel Orientation="Horizontal">
                <local:Square/>
                <local:Square/>
                <local:Square/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <local:Square/>
                <local:Square/>
                <local:Square/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <local:Square/>
                <local:Square/>
                <local:Square/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
